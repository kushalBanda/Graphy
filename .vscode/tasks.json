{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "npm: compile (graphy)",
            "type": "shell",
            "command": "npm run compile",
            "options": {
                "cwd": "${workspaceFolder}/graphy"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "npm: watch (graphy)",
            "type": "shell",
            "command": "npm run watch",
            "options": {
                "cwd": "${workspaceFolder}/graphy"
            },
            "isBackground": true,
            "problemMatcher": {
                "owner": "typescript",
                "pattern": {
                    "regexp": "^([^\\s].*)\\((\\d+|\\d+,\\d+|\\d+,\\d+,\\d+,\\d+)\\):\\s+(error|warning|info)\\s+(TS\\d+)\\s*:\\s*(.*)$",
                    "file": 1,
                    "location": 2,
                    "severity": 3,
                    "code": 4,
                    "message": 5
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^[watch] build started",
                    "endsPattern": "^[watch] build finished"
                }
            }
        }
    ]
}

